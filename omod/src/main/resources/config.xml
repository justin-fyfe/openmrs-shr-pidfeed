	<!-- Required Global Properties--> 
	<globalProperty>
		<property>hl7.llp.port</property>
		<defaultValue>2100</defaultValue>
		<description>
			The port on which the HL7 LLP listener should run
		</description>
	</globalProperty>
	<globalProperty>
		<property>hl7.llp.user</property>
		<defaultValue>admin</defaultValue>
		<description>
			The name of the user with which the LLP listener should create/update data
		</description>
	</globalProperty>
	<globalProperty>
		<property>hl7.llp.pass</property>
		<defaultValue>password</defaultValue>
		<description>
			The password of the LLP user
		</description>
	</globalProperty>
	<!-- /Required Global Properties -->
	
